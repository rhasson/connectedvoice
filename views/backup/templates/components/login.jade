script(type="text/x-handlebars", data-template-name="components/log-in")
  {{#unless isLoggedIn}}
  form(class="navbar-form navbar-right")
    div.form-group
      input#login_email(type="text", placeholder="Email", class="form-control")
    div.form-group
      input#login_password(type="password", placeholder="Password", class="form-control")
    <button id="login_btn" type="submit" class="btn btn-success" {{action 'loginAction'}}>Sign in</button>
  {{else}}
  form(class="navbar-form navbar-right")
    <button id="logout_btn" type="submit" class="btn btn-warning" {{action 'logoutAction'}}>Sign out</button>
  {{/unless}}