script(type="text/x-handlebars", data-template-name="ivr-reject")
  div.row(id="ivr-reject-view")
    div.form-inline
      div.form-group
        label.form-control.va-action-label.va-inline-space REJECT
        label.form-control.va-action-label.va-inline-space And play back the following tone
        {{view "select" content=view.model.params.reason_options value=view.model.verb_attributes.reason class="form-control va-inline-space"}}
        <span id="ivr-reject-remove" class="glyphicon glyphicon-remove-circle va-inline-space" {{action "removeIvrItemAction" view}}></span>
